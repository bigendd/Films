{# templates/profile/view.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <h1>Mon Profil</h1>
    <p><strong>Email :</strong> {{ utilisateur.email }}</p>
    <p><strong>Nom :</strong> {{ infoUtilisateur.nom }}</p>
    <p><strong>Date de Naissance :</strong> {{ infoUtilisateur.dateDeNaissance|date('Y-m-d') }}</p>
    <p><strong>Genre :</strong> {{ infoUtilisateur.genre }}</p>
    <p><strong>Adresse :</strong> {{ infoUtilisateur.adresse }}</p>
    <p><strong>Numéro de Téléphone :</strong> {{ infoUtilisateur.numeroDeTelephone }}</p>
    <a href="{{ path('profile_edit') }}">Modifier le profil</a>
{% endblock %}
