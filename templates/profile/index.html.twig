{# templates/profile/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <h1>Edit Profile</h1>

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.photoDeProfil) }}
        {{ form_row(form.dateDeNaissance) }}
        {{ form_row(form.genre) }}
        {{ form_row(form.adresse) }}
        {{ form_row(form.numeroDeTelephone) }}
        <button class="btn">Save changes</button>
    {{ form_end(form) }}
{% endblock %}
