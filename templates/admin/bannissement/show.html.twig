{% extends 'admin/index.html.twig' %}
{% block title %}Bannissement{% endblock %}

{% block admin %}
    <h1>Bannissement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bannissement.id }}</td>
            </tr>
            <tr>
                <th>Raison</th>
                <td>{{ bannissement.raison }}</td>
            </tr>
            <tr>
                <th>DateDeBannissement</th>
                <td>{{ bannissement.dateDeBannissement ? bannissement.dateDeBannissement|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ bannissement.statut ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_bannissement_index') }}" class="btn btn-primary">Retour a la liste</a>

    <a href="{{ path('admin_bannissement_edit', {'id': bannissement.id}) }} " class="btn btn-success ">edit</a>

    {{ include('admin/bannissement/_delete_form.html.twig') }}
{% endblock %}
