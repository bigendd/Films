{% extends 'base.html.twig' %}

{% block title %}Avis des Utilisateurs{% endblock %}

{% block body %}
    <h1>Avis des Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Commentaire</th>
                <th>Utilisateur</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for avis in avis %}
                <tr>
                    <td>{{ avis.id }}</td>
                    <td>{{ avis.commentaire }}</td>
                    <td>{{ avis.utilisateur.email }}</td>
                    <td>{{ avis.dateDeCreation|date('Y-m-d H:i') }}</td>
                    <td>
                        <form method="post" action="{{ path('admin_avis_archive', {'id': avis.id}) }}">
                            <button type="submit" class="btn btn-secondary">Archiver</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_signalement_index') }}">Retour aux Signalements</a>
{% endblock %}
